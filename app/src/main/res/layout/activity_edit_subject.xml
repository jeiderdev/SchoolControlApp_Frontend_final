<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Nombre de la materia -->
        <EditText
            android:id="@+id/etSubjectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la materia"/>

        <!-- Descripci贸n -->
        <EditText
            android:id="@+id/etSubjectDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripci贸n"
            android:layout_marginTop="8dp"/>

        <!-- Profesor asignado (solo lectura) -->
        <EditText
            android:id="@+id/etTeacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Profesor asignado"
            android:enabled="false"
            android:layout_marginTop="8dp"/>

        <!-- Bot贸n Guardar cambios -->
        <Button
            android:id="@+id/btnSaveSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar cambios"
            android:layout_marginTop="16dp"/>

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="16dp"/>

        <!-- Lista de estudiantes matriculados -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estudiantes matriculados"
            android:textStyle="bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvEnrollments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <!-- Bot贸n agregar estudiante -->
        <Button
            android:id="@+id/btnAddEnrollment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Matricular estudiante"
            android:layout_marginTop="12dp"/>

    </LinearLayout>
</ScrollView>
