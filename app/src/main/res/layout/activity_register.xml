<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
<LinearLayout android:orientation="vertical" android:padding="24dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:text="Registro" android:textSize="24sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/etRegEmail" android:hint="Correo" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/input_bg" android:padding="12dp"/>
    <EditText android:id="@+id/etRegPass" android:hint="Contraseña" android:inputType="textPassword" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/input_bg" android:padding="12dp"/>
    <EditText android:id="@+id/etRegName" android:hint="Nombre completo" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/input_bg" android:padding="12dp"/>
    <EditText android:id="@+id/etRegId" android:hint="Número de identificación" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/input_bg" android:padding="12dp"/>
    <EditText android:id="@+id/etRegAge" android:hint="Edad" android:inputType="number" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/input_bg" android:padding="12dp"/>
    <Button android:id="@+id/btnRegister" android:text="Crear cuenta" android:layout_marginTop="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:backgroundTint="@color/primary" android:textColor="@android:color/white"/>
</LinearLayout>
</ScrollView>
