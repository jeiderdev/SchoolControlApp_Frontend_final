<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:padding="24dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:text="Resetear contraseña" android:textSize="20sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/etToken" android:hint="Token" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/input_bg" android:padding="12dp"/>
    <EditText android:id="@+id/etNewPassword" android:hint="Nueva contraseña" android:inputType="textPassword" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/input_bg" android:padding="12dp"/>
    <Button android:id="@+id/btnReset" android:text="Resetear" android:layout_width="match_parent" android:layout_height="wrap_content" android:backgroundTint="@color/primary" android:textColor="@android:color/white"/>
</LinearLayout>
